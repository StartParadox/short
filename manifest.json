{
    "manifest_version": 2,
    "name": "Shortner",
    "description": "Quickly get a shortened URL for a site!",
    "version": "1.0",
    
    "browser_action": {
        "default_title":"UShort",
        "default_icon": "icon.png",
        "default_popup":"popup.html"  
    },
    

    "permissions": [
    "activeTab"    
    "tabs"
    "<all_urls>"
    ]
}
