{
    "manifest_version": 2,

    "name": "URL Shortner",
    "description": "Quickly get a shortened URL for a site!",
    "version": "1.0",


    "browser_action": {
        "default_title": "Url Shortener",
        "default_icon": "icon.png",
        "default_popup": "popup.html"
    },

    "content_security_policy": "script-src 'self' https://apis.google.com/js/client.js?onload=init; object-src 'self'",


    "permissions": [
    "activeTab",
    "tabs",
    "<all_urls>"
    ]
}